<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--可设置不同字体、大小、颜色、间距的TextView-->
    <declare-styleable name="MultiTextView">
        <attr name="leftText" format="string" />
        <attr name="middleText" format="string" />
        <attr name="rightText" format="string" />
        <attr name="leftTextColor" format="color" />
        <attr name="middleTextColor" format="color" />
        <attr name="rightTextColor" format="color" />
        <attr name="leftTextSize" format="dimension" />
        <attr name="middleTextSize" format="dimension" />
        <attr name="rightTextSize" format="dimension" />
        <attr name="leftTextFontFamily" format="string" />
        <attr name="middleTextFontFamily" format="string" />
        <attr name="rightTextFontFamily" format="string" />
        <attr name="leftTextBold" format="boolean" />
        <attr name="middleTextBold" format="boolean" />
        <attr name="rightTextBold" format="boolean" />
        <attr name="leftMarginHorizontal" format="dimension" />
        <attr name="middleMarginHorizontal" format="dimension" />
        <attr name="rightMarginHorizontal" format="dimension" />
    </declare-styleable>
</resources>